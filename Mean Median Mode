# Enter your code here. Read input from STDIN. Print output to STDOUT
n = int(input())
arr = list(map(int,input().split()))
mean = sum(arr) / n
if n % 2 == 1:
    median = arr[n // 2]
else:
    median = (arr[n // 2 - 1] + arr[n // 2]) / 2
freq = {}
for n in arr:
    freq[n] = freq.get(n, 0) + 1
max_freq = max(freq.values())
mode = None 
for n in arr:
    if freq[n] == max_freq:
        mode = n
        break
print(f"{mean:.2f} {median:.2f} {mode}")
